{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block navbar %}
    <nav class="navbar">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('assets/img/logo-kine.png') }}" alt="" height="72" width="72"></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right main-nav">

                    {% if app.user() %}
                        <li><a href="{{ path('app_logout') }}" class="btn btn-blue">Se déconnecter</a></li>
                        <li><a href="{{ path('homepage') }}" class="btn btn-blue">Accueil</a></li>
                    {% else %}
                        <li><a href="{{ path('login') }}" class="btn btn-blue">Se connecter</a></li>
                        <li><a href="{{ path('app_register') }}" class="btn btn-blue">S'inscrire</a></li>
                    {% endif %}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
{% endblock %}


{% block header %}
    <header id="intro">
        <div class="container">
            <div class="table">
                <div class="header-text">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h3 class="light white">Nom : {{ user.lastname }}</h3>
                            <h3 class="light white">Prénom : {{ user.firstname }}</h3>
                            <h3 class="light white">Email : {{ user.email }}</h3>
                            {% if user.kine != "" %}
                                <h3 class="light white">Kiné : {{ user.kine }}</h3>
                            {% endif %}
                            <a href="{{ path('edit_profil', {'id': user.id}) }}" class="btn btn-blue" style="margin-top: 5px">Modifier les informations</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}

{% endblock %}
